include card

mixin card-project(name, imgsrc)
    a(href=link)
        +card(shape='w-72 h-96 sm:w-80 sm:h-80 rounded-lg', hover=false)
            div(class='rounded-lg overflow-clip')
                img(src=imgsrc class='w-full h-32 object-cover')
            div(class="text-white text-center pt-4")
                h3(class='text-lg')
                    =name
                block
