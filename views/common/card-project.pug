include card

mixin card-project(name, imgsrc)
    +card(shape='w-72 h-[28rem] sm:w-80 rounded-lg', hover=false)
        div(class='rounded-lg overflow-clip')
            img(src=imgsrc class='w-full h-32 sm:h-48 object-cover')
        div(class="text-white text-center pt-4 flex flex-col h-72 sm:h-56")
            h3(class='text-lg')
                =name
            block
