mixin section-card(imgsrc, text, link, shape='')
    a(href=link)
        div(class='w-48 h-48 lg:w-64 lg:h-64 rounded-lg group bg-gradient-to-bl from-purple-600 to-grey-900 shadow-xl m-4 z-0')
            div(class='w-48 h-48 lg:w-64 lg:h-64 rounded-lg transition-opacity opacity-0 group-hover:opacity-100 bg-gradient-to-bl from-orange-500 to-purple-900 via-purple-500 absolute z-10')
            div(class='p-2 z-20 relative')
                div(class='rounded-lg overflow-clip')
                    img(src=imgsrc class='w-full h-32 lg:h-48 object-cover')
                div(class="text-white text-center pt-4")
                    =text
